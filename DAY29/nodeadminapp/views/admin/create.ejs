<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>신규 관리자 계정 등록</h2>
    <ol class="breadcrumb">
      <li><a href="/">홈</a> ></li>
      <li><a>관리자 계정 등록</a> ></li>
      <li class="active">
        <strong>등록</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<form action="/admin/create" id="articleForm" method="post">
  <div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자 아이디</label>
            <input
              type="text"
              name="admin_id"
              id="admin_id"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자 비밀번호</label>
            <input
              type="password"
              name="admin_member_password"
              id="admin_member_password"
              class="form-control"
            />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">관리자 명</label>
            <input
              type="text"
              name="admin_name"
              id="admin_name"
              class="form-control"
            />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">메일 주소</label>
            <input type="email" name="email" id="email" class="form-control" />
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">전화번호</label>
            <input
              type="text"
              name="telephone"
              id="telephone"
              class="form-control"
            />
          </div>
        </div>

        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">사용여부</label>
            <select name="used_yn_code" id="used_yn_code" class="form-control">
              <option value="9">선택</option>
              <option value="1">활성</option>
              <option value="0">비활성</option>
            </select>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">소속회사</label>
            <select name="company_code" id="company_code" class="form-control">
              <option value="0">선택</option>
              <option value="1">자회사</option>
              <option value="2">협력업체</option>
            </select>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label">부서명</label>
            <input
              type="text"
              name="dept_name"
              id="dept_name"
              class="form-control"
            />
          </div>
        </div>
      </div>

      <!-- 저장/목록이동 버튼  -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">저장</button>
        <a href="/admin/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </div>
</form>

